<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
</head>
<div class="container">
    <body>
        <h1>URL Shrinker</h1>
         <form action="/shorturls" method="POST" class="d-flex my-4">
            <input required placeholder="Url" type="url" name="fullurl" id="fullurl" class="form-control me-2 col">
            <button class="btn btn-success" type="submit">Shrink Now!</button>
         </form>
        <table class="table table-striped table-responsive table-bordered">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Shortened URL</th>
                    <th>Clicks: </th>
                </tr>           
            </thead>
            <tbody>
                <% shorturls.forEach(shorturl => { %>
                    <tr>
                        <td>
                            <a href="<%= shorturl.full %>">
                                <%= shorturl.full %></a>
                        </td>
                        <td><a href="<%= shorturl.short %>"><%= shorturl.short %></a></td>
                        <td><%= shorturl.clicks %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </body>
</div>
</html>